@model IEnumerable<StudentTracker.Models.Student>

@{ ViewData["Title"] = "Home Page"; }


<div>
	<h1> Students </h1>
    @if (Model.Count() > 0){
        @foreach (var student in Model){        
	        <div>
		        Who: @Html.DisplayFor(modelItem => student.Name)
	        </div>
            <div>
		        What: @Html.DisplayFor(modelItem => student.Reason)
	        </div>
	    }
    }
    @if (Model.Count() == 0 ){
        <span><i>No Students Waiting</i></span>
    }
</div>